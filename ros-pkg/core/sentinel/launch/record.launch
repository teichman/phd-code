<launch>
  <arg name="occupancy-threshold" default="1200" />
  <node name="sentinel" pkg="sentinel" type="stream" args="--color-res QVGA --depth-res QVGA --sensor-id xpl00 --occupancy-threshold $(arg occupancy-threshold) --recording-dir $(env PWD)/sentinel-videos" respawn="true" output="screen"/>
  <node name="rosbag" pkg="rosbag" type="record" args="-a --split=1024 -j -o $(env PWD)/sentinel"/>
</launch>